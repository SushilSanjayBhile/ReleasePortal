{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "name": "diamanti-release-testing"
    },
    "spec": {
        "clusterIP": "None",
        "ports": [
            {
                "name": "frontend",
                "port": 80,
                "protocol": "TCP",
                "targetPort": 5050
            },
            {
                "name": "backend",
                "port": 8000,
                "protocol": "TCP",
                "targetPort": 8000 
            },
            {
                "name": "db",
                "port": 5432,
                "protocol": "TCP",
                "targetPort": 5432
            },
            {
                "name": "flaskapp",
                "port": 5000,
                "protocol": "TCP",
                "targetPort": 5000
            }

        ],
        "selector": {
            "diamanti.com/app": "universal-testing"
        }
    }
}
