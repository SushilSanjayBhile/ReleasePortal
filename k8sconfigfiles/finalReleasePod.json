{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "universal"
        },
        "name": "diamantiuniversalportal"
    },
    "spec": {
        "stratergy":
            "type": "Recreate",
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "universal"
             }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "universal"
                },
                "name": "universal",
        	"annotations": {
	            "diamanti.com/endpoint0":"{\"endpointId\":\"diamantireleaseportal\",\"perfTier\":\"high\"}"
       	 	}
            },
            "spec": {
                "containers": [
                    {
                        "image": "sushilmax93/releasepostgres:dbimage7",
                        "name": "db",
                        "tty": true,
                        "resources": {
                            "requests": {
                                "cpu": "12000m",
                                "memory": "16Gi"
                            }
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/data",
                                "name": "release-pvc"
                            }
                        ]
                    },
                    {
                        "image": "aratijadhav/dockernodejs:stableV71",
                        "imagePullPolicy": "Always",
                        "name": "frontend",
                        "tty": true,
                        "resources": {
                            "requests": {
                                "cpu": "1000m",
                                "memory": "4Gi"
                            }
                        }
                    },
                    {
                        "image": "sushilmax93/releasefinal:stable59",
                        "imagePullPolicy": "Always",
                        "name": "controller",
                        "tty": true,
                        "resources": {
                            "requests": {
                                "cpu": "6000m",
                                "memory": "16Gi"
                            }
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/data",
                                "name": "release-pvc"
                            }
                        ]
                    }
                ],
                "restartPolicy": "Always",
	        "volumes": [
	            {
	                "persistentVolumeClaim": {
	                    "claimName": "release-pvc"
	                },
	                "name": "release-pvc"
	            }
	        ]
            }
        }
    }
}
